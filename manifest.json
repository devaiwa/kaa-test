{
  "manifest_version": 3,
  "name": "Webmail Mailto Handler (Request Intercept)",
  "version": "1.1",
  "description": "Handles mailto: requests by opening your preferred webmail service.",
  "permissions": ["storage", "tabs", "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Webmail Mailto Handler Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
