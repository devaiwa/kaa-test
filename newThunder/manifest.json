{
  "name": "Email Labeler",
  "version": "1.0",
  "description": "Adds custom label options to new emails",
  "id": "email-labeler@yourdomain.com",
  "manifest_version": 2,
  "author": "Your Name",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Ctrl+Shift+L" }
    }
  },
  "permissions": ["composeAction"],
  "composeAction": {
    "title": "Add Label",
    "icon": "icons/icon-48.png",
    "gutterIcon": true,
    "onCompose": true
  },
  "background": {
    "scripts": ["background.js"]
  }
}
